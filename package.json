{
  "name": "react-native-quick-sqlite-workspace",
  "version": "8.2.1",
  "private": "true",
  "workspaces": [
    "package",
    "example"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/margelo/react-native-quick-sqlite.git"
  },
  "author": "Marc Rousavy <me@mrousavy.com> (https://github.com/mrousavy)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/margelo/react-native-quick-sqlite/issues"
  },
  "homepage": "https://github.com/margelo/react-native-quick-sqlite#readme",
  "scripts": {
    "package": "bun --cwd package",
    "example": "bun --cwd example",
    "postinstall": "patch-package",
    "format-cpp": "./scripts/clang-format.sh",
    "typescript": "bun --filter=\"**\" typescript",
    "lint": "bun --filter=\"**\" lint",
    "bootstrap": "bun --filter=\"**\" install && bun typescript && bun example pods",
    "release": "release-it",
    "clean": "rm -rf **/tsconfig.tsbuildinfo node_modules package/node_module package/lib"
  },
  "dependencies": {
    "patch-package": "^8.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.10.0",
    "@jamesacarr/eslint-formatter-github-actions": "^0.2.0",
    "@react-native/eslint-config": "0.75.2",
    "@release-it-plugins/workspaces": "^4.2.0",
    "@release-it/bumper": "^6.0.1",
    "@release-it/conventional-changelog": "^8.0.2",
    "@tsconfig/react-native": "^2.0.2",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.13",
    "eslint": "8.57.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "release-it": "^17.10.0",
    "typescript-eslint": "^8.6.0"
  },
  "release-it": {
    "npm": false,
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}",
      "requireCleanWorkingDir": false
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it-plugins/workspaces": true,
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "‚ú® Features"
            },
            {
              "type": "perf",
              "section": "üí® Performance Improvements"
            },
            {
              "type": "fix",
              "section": "üêõ Bug Fixes"
            },
            {
              "type": "chore(deps)",
              "section": "üõ†Ô∏è Dependency Upgrades"
            },
            {
              "type": "docs",
              "section": "üìö Documentation"
            }
          ]
        }
      },
      "@release-it/bumper": {
        "out": {
          "file": "example/package.json"
        }
      }
    }
  }
}
